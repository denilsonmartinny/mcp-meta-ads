# Configurações do Servidor
HOST=0.0.0.0
PORT=8000
RELOAD=true
MCP_ENV=development  # development, production, testing

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGS_DIR=logs

# Autenticação
JWT_SECRET_KEY=seu_segredo_superseguro_para_desenvolvimento
TOKEN_EXPIRE_MINUTES=1440  # 24 horas
DISABLE_AUTH=false  # Defina como true apenas em desenvolvimento

# Meta Ads API
META_APP_ID=seu_app_id
META_APP_SECRET=seu_app_secret
META_ACCESS_TOKEN=seu_access_token
META_ACCOUNT_ID=seu_account_id

# CORS
CORS_ORIGINS=*  # Use vírgulas para separar múltiplas origens

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # segundos

# Outras Configurações
MAX_REQUEST_SIZE=10485760  # 10MB em bytes

# Cache
CACHE_ENABLED=true
CACHE_TTL=300  # segundos